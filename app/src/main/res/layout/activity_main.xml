    <LinearLayout
        android:id="@+id/firstLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/cardview"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:gravity="center"
        android:layout_weight = "0.8">

        <Button
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:text="Home Main Cam"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:drawableLeft="@drawable/cameraimage"
            android:background="@drawable/buttonview" />
    </LinearLayout>
    <LinearLayout
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "0.1">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="edit"
            android:gravity="right|center"
            android:textColor="#A50113"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "0.1">
     <ImageButton
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/tabler_edit"
         android:background="@drawable/buttonview"
         android:layout_gravity="left|center"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cardview"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/firstLinearLayout">

    <Button
        android:id="@+id/camera_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonview"
        android:text="Camera Setting"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        android:drawableRight="@drawable/right_button"
        android:paddingRight="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom = "true"/>
    <Button
        android:id="@+id/alert_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert Setting"
        android:background="@drawable/buttonview"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        android:gravity="left|center"
        android:drawableRight="@drawable/right_button"
        android:paddingRight="15dp"
        android:textAllCaps="false"
        android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom = "true"/>

        <Button
            android:id="@+id/camera_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera Inforamtion"
            android:background="@drawable/buttonview"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:gravity="left|center"
            android:drawableRight="@drawable/right_button"
            android:paddingRight="15dp"
            android:textAllCaps="false"
            android:paddingLeft="10dp"/>
    </LinearLayout>

</RelativeLayout>